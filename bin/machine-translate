#!/usr/bin/env bash
set -eu

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

source config/l10n-kit.conf

mkdir -p vendor
curl -L https://github.com/doc-l10n-kit/quarkus-adoc-po-translator/releases/download/$QUARKUS_ADOC_PO_TRANSLATOR_VERSION/quarkus-adoc-po-translator-runner.jar -o vendor/quarkus-adoc-po-translator-runner.jar
find l10n/po/ja_JP/_guides/ -name "*.adoc.po" | xargs java -jar vendor/quarkus-adoc-po-translator-runner.jar --srcLang=en --dstLang=ja
find l10n/po/ja_JP/_posts/ -name "*.adoc.po" | xargs java -jar vendor/quarkus-adoc-po-translator-runner.jar --srcLang=en --dstLang=ja

bin/normalize
