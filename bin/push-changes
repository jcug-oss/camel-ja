#!/usr/bin/env bash
set -eu

SCRIPT_DIR=$(cd $(dirname $0); pwd)
L10N_HOME=$(cd $(dirname $SCRIPT_DIR); pwd)
cd $L10N_HOME

source config/l10n-kit.conf

git add upstream
if [ -z "l10n" ]; then
    git add l10n
fi

set +e
git diff --cached --exit-code --quiet

if [[ $? -eq 1 ]] ; then
  set -e
  git commit -m "[GitHub Actions] $1"
  git fetch
  git rebase origin/main
  git push origin main
fi
set -e
